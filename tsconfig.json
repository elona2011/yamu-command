{
    "compilerOptions": {
        "strictNullChecks": true,
        "module": "commonjs",
        "outDir": "./built",
        "allowJs": true,
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        "noImplicitAny": true,
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}